# test application
event system_boot(major,minor,patch,build,bootloader,hw)
	call hardware_configure_gpio(0,3,4,1)
	call hardware_configure_gpio(5,4,4,1)
	call le_gap_set_adv_parameters(1600,1600,7)
	call le_gap_set_mode(2,2)
end

event le_connection_opened(address,address_type,master,connection,bonding)
	call hardware_write_gpio(0,$8,0)
	call hardware_write_gpio(5,$10,0)
end

event le_connection_closed(reason,connection)
	call hardware_write_gpio(0,$8,$8)
	call hardware_write_gpio(5,$10,$10)
end