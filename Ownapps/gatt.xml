            <properties read="true" const="true" />
            <value>BGM111</value>
        </characteristic>

        <!-- Serial number string -->
        <!-- https://developer.bluetooth.org/gatt/characteristics/Pages/CharacteristicViewer.aspx?u=org.bluetooth.characteristic.system_id.xml -->
